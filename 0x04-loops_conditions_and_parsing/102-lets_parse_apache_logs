#!/usr/bin/env bash
# This script displays the visitor IP along with the HTTP status code from the Apache log file.

# Check if apache-access.log file exists
if [ -f "apache-access.log" ]; then
    # Display IP and HTTP status code using grep and cut
    grep -oE '([0-9]{1,3}\.){3}[0-9]{1,3} [0-9]{3}' apache-access.log
else
    echo "Error: apache-access.log file not found."
fi

