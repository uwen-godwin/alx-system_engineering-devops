#!/bin/bash

# Get the PID of the script
script_pid=$$

# Get the PIDs of processes containing the word "bash"
mapfile -t bash_pids < <(pgrep -f bash)

# Display the PIDs along with the process name
for pid in "${bash_pids[@]}"; do
    echo "$pid bash"
done

# Display the PID of the script itself
echo "$script_pid $0"
