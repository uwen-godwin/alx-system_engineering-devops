#!/bin/bash

# Update package lists and install nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create a sample HTML file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Configure nginx to redirect /redirect_me
sudo sed -i 's/location \/ {/location \/ {\n\t\tlocation \/redirect_me {\n\t\t\treturn 301 https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;\n\t\t}/' /etc/nginx/sites-available/default

# Restart nginx
sudo /etc/init.d/nginx reload
